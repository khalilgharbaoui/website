- title t('.page_title')
- meta_description t('.meta_description')
- meta_keywords t('.meta_keywords')

- localized_cache ['programs/level-1'] do
  .dbc-program
    .dbc-container
      .inner#program
        .block-title
          h2
            = t(:beginner_bootcamp)
            span = t(:beginner_bootcamp_tagline)

      .inner
        .row
          .description
            = tmd(:beginner_bootcamp_description)

            = render 'enroll_cta'

            .course-type
              .icon = fa_icon('clock-o')
              = tmd(:this_is_an_immersive_course)

              => tweet_button
              = like_button

          .dbc-day.day-one
            .day-inner
              .date
                | DAY 1
                .pull-right Sunday
              .activity
                h2 Frontend
                p The Face of a Website
              .image
                = image_tag 'courses/day1-frontend.png'
              .topics
                ul
                  li Page structure with HTML
                  li Styling and design with CSS

        .row
          .dbc-day.day-two
            .day-inner
              .date
                | DAY 2
                .pull-right Monday
              .activity
                h2 Terminal
                p Behind the Scenes
              .image
                = image_tag 'courses/day2-terminal.png'
              .topics
                ul
                  li Text commands
                  li Connecting to servers
                  li Sharing code with repos

          .dbc-day.day-three
            .day-inner
              .date
                | DAY 3
                .pull-right Tuesday
              .activity
                h2 Basic Programming
                p Meet Ruby
              .image
                = image_tag 'courses/day3-ruby.png'
              .topics
                ul
                  li Meet Ruby, a new language
                  li Create an Oracle

          .dbc-day.day-four
            .day-inner
              .date
                | DAY 4
                .pull-right Wednesday
              .activity
                h2 Loops and Breaks
                p While We Wait
              .image
                = image_tag 'courses/day4-loops.png'
              .topics
                ul
                  li Loops make your head spin
                  li It's gonna be... wait for it!

          .dbc-day.day-five
            .day-inner
              .date
                | DAY 5
                .pull-right Thursday
              .activity
                h2 Object Oriented Programming
                p The Family Tree
              .image
                = image_tag 'courses/day5-oop.png'
              .topics
                ul
                  li Why OOP?
                  li Structure and history

          .dbc-day.day-six
            .day-inner
              .date
                | DAY 6
                .pull-right Friday
              .activity
                h2 Back to Front
                p With Ruby on Rails
              .image
                = image_tag 'courses/day6-ror.png'
              .topics
                ul
                  li Models
                  li Controllers
                  li Views

          .dbc-day.day-seven
            .day-inner
              .date
                | DAY 7
                .pull-right Saturday
              .activity
                h2 Hackathon:
                p And the Winner is..!
              .image
                = image_tag 'courses/day7-hackathon.png'
              .topics
                ul
                  li A Contest!
                  li Demos and Prizes
                  li Closing thoughts
        .row
          .col-xs-12
            #examples.callout.callout-info
              h3 = t('.what_you_can_build')

              p = t('.wondering_what_others_built')

              h4 = t('.examples_of_former_students')

              ul
                li = link_to 'Pomodoro Parrot', 'http://pomodoro.cloud.codaisseur.com', target: :blank
                / li = link_to 'Coffee News', 'http://coffeenews.cloud.codaisseur.com', target: :blank
                li = link_to 'Beer of the Week', 'http://beer.cloud.codaisseur.com/', target: :blank
                li = link_to 'Got Sacked?', 'http://gotsacked.cloud.codaisseur.com/', target: :blank

            = render 'enroll_cta'

            = render 'scholarship_program', course: 'Beginner Bootcamp'

      = render 'other_bootcamps', current_level: :beginner
