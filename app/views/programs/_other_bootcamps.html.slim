- unless current_level == :beginner
  .inner.program.collapsed
    .well.beginner
      h3
        = t(:beginner_bootcamp)
        span = t(:beginner_bootcamp_tagline)
      p = link_to t(:beginner_program), program_level_1_path, class: 'button'

- unless current_level == :intermediate
  .inner.program.collapsed
